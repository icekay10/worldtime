{
  "name": "worldclock",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "next": "^15.5.4",
    "react-helmet": "^6.1.0",
    "vike": "^0.4.238",
